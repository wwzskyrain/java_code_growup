<?xml version="1.0" encoding="GBK"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.0.xsd
	http://www.springframework.org/schema/aop
	http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

    <bean id="countingAfterReturningAdvice" class="erik.spring.deep.aop.advice.CountingAfterReturningAdvice"/>

    <bean id="pointcut" class="erik.spring.deep.aop.pointcut.TruePointCut"/>

   <bean id="advisor" class="erik.spring.deep.aop.advisor.CountingMethodAdvisor">
       <property name="advice" ref="countingAfterReturningAdvice"/>
       <property name="pointcut" ref="pointcut"/>
   </bean>

    <bean id="factoryBean" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="proxyInterfaces" value="erik.spring.deep.aop.inter.TestInterface"/>
        <property name="target" value="erik.spring.deep.aop.impl.TestImpl"/>
        <property name="interceptorNames">
            <list>
                <value>advisor</value>
            </list>
        </property>
    </bean>

</beans>
